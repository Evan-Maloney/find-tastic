{
    "manifest_version": 2,
    "name": "Smart Search Extension",
    "version": "1.0",
    "description": "A Chrome extension for smart, fuzzy text searching.",
    "permissions": ["activeTab"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  