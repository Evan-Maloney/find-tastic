{
  "manifest_version": 2,
  "name": "Smart Search Extension",
  "version": "1.0",
  "description": "A Chrome extension for smart, fuzzy text searching.",
  
  "background": {
    "scripts": ["popup.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "brain.png"
  }
}
